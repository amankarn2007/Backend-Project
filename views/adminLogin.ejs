<%- layout("/adminIncludes/adminBoilerplate") %>


<div class="w-full min-h-[calc(100vh-100px)] flex justify-center">

    <div class="w-full max-w-xl flex items-center justify-center border-x-[2px] shadow-lg border-zinc-[200] ">
        <div class="w-full px-20 mb-20">
            <h4 class="text-3xl mb-5 flex justify-center">Admin Access</h4>
            <form class="needs-validation" action="/admin/login" method="post" novalidate>

                <div class="flex flex-col mb-3">
                    <input class="bg-zinc-100 block w-full px-3 py-2 border-[2px] rounded-md border-zinc-200 outline-none focus:border-sky-400" type="email" placeholder="Email" name="email" required>
                    
                    <div class="invalid-feedback font-bold">Please enter your password!</div>
                </div>

                <div class="h-[70px]">
                    <input class="bg-zinc-100 block w-full px-3 py-2 border-[2px] rounded-md border-zinc-200 outline-none focus:border-sky-400" type="password" placeholder="Password" name="password" required>

                    
                    <div class="invalid-feedback font-bold">Please enter your password!</div>
                </div>

                <input class="px-5 py-3 mb-2 rounded-full bg-blue-500 text-white" type="submit" value="Login">
            </form>
        </div>
    </div>

</div>