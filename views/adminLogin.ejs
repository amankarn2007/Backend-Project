<%- layout("/adminIncludes/adminBoilerplate") %>


<div class="w-full min-h-[calc(100vh-100px)] flex justify-center px-20">

    <div class="w-full max-w-xl flex items-center justify-center border-x-[2px] border-y-[2px] border-zinc-[200]">
        <div class="w-full px-20 mb-20">
            <h4 class="text-3xl mb-5 flex justify-center">Admin Access</h4>
            <form action="/admin/login" method="post">
                <input class="bg-zinc-100 block w-full px-3 py-2 border-[1px] rounded-md mb-3 border-zinc-200" type="email" placeholder="Email" name="email">

                <input class="bg-zinc-100 block w-full px-3 py-2 border-[1px] rounded-md mb-3 border-zinc-200" type="password" placeholder="Password" name="password">

                <input class="px-5 py-3 mb-2 rounded-full bg-blue-500 text-white" type="submit" value="Login">
            </form>
        </div>
    </div>

</div>