<%- layout("/adminIncludes/adminBoilerplate") %>


<div class="min-h-[calc(100vh-100px)] flex flex-col">
    <div class="container flex flex-grow">
        <!--left side menu-->
        <div class="w-[20%] flex flex-col items-start">
            <div class="flex flex-col ml-16 mt-9">
                <a class="block w-fit mb-2" href="/admin/adminDashboard">All Products</a>
                <a class="block w-fit mb-2" href="/products/create">Create new product</a>
            </div>
        </div>

        <!--right side product form-->
        <main class="w-[80%] px-8 py-[20px] ml-4 bg-white shadow">
            <h2 class="text-xl font-bold mb-[10px]">Edit Product</h2>

            <form class="needs-validation" autocomplete="off" action="/products/editProduct/<%= product.id %>?_method=PUT" method="post" enctype="multipart/form-data" novalidate>

                <div class="mb-[10px]">
                    <h3 class="text-lg font-semibold mb-2">Product Details</h3>
                    
                    <div class="mb-4">
                        <label class="block mb-2 font-medium">Product Image</label>
                        <input name="image" type="file" class="py-2" required>

                        <div class="invalid-feedback font-bold">Please upload your product image!</div>
                    </div>

                    <div class="grid grid-cols-2 gap-4">
                        <div>
                            <input name="name" type="text" placeholder="Product Name"
                            class="border-[2px] p-2 rounded w-full outline-none focus:border-sky-400" value="<%= product.name %>" required>

                            <div class="invalid-feedback font-bold">Please enter your product name!</div>
                        </div>

                        <div>
                            <input name="price" type="text" placeholder="Product Price"
                            class="border-[2px] p-2 rounded w-full outline-none focus:border-sky-400" value="<%= product.price %>" required>

                           <div class="invalid-feedback font-bold">Please enter your product price!</div> 
                        </div>

                        <div>
                            <input name="discount" type="text" placeholder="Discount Price"
                            class="border-[2px] p-2 rounded w-full outline-none focus:border-sky-400" value="<%= product.discount %>" required>

                            <div class="invalid-feedback font-bold">Please enter your product [rice]!</div>
                        </div>
                    </div>
                </div>

                <div>
                    <h3 class="text-lg font-semibold mb-2">Panel Details</h3>
                    <div class="grid grid-cols-2 gap-4">
                        <div>
                            <input name="bgcolor" type="text" placeholder="Background Color"
                            class="border-[2px] p-2 rounded w-full outline-none focus:border-sky-400" value="<%= product.bgcolor %>" required>

                            <div class="invalid-feedback font-bold">Please enter your product's background color!</div>
                        </div>

                        <div>
                            <input name="pannelcolor" type="text" placeholder="Panel Color"
                            class="border-[2px] p-2 rounded w-full outline-none focus:border-sky-400" value="<%= product.pannelcolor %>" required>

                            <div class="invalid-feedback font-bold">Please enter your product's panel color!</div>
                        </div>

                        <div>
                            <input name="textcolor" type="text" placeholder="Text Color"
                            class="border-[2px] p-2 rounded w-full outline-none focus:border-sky-400" value="<%= product.textcolor %>" required>

                            <div class="invalid-feedback font-bold">Please enter your product's text color!</div>
                        </div>
                    </div>
                </div>

                <input class="px-10 py-2 rounded mt-3 text-white text-lg bg-blue-500 hover:bg-cyan-500" type="submit" value="Edit">

            
            </form>
        </main>
    </div>
</div>